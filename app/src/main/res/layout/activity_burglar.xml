<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="安全号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/safe_phone"
            android:text="*****"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="8dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="防盗保护是否开启"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/lock_img"
            android:src="@drawable/unlock"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="8dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <CheckBox
        android:id="@+id/openAdmin"
        android:visibility="gone"
        android:textSize="20sp"
        android:text="开启管理员权限"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="resetBurglar"
        android:id="@+id/reset_burglar"
        style="@style/btn_choose_person"
        android:text="重新进入设置向导"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:text="功能简介"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20sp"
        android:background="#ffc1c5bb"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:drawablePadding="5dp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="GPS追踪：#*location*#"
        style="@style/burglar_content_style"/>

    <TextView
        android:drawablePadding="5dp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="播放报警音乐：#*alarm*#"
        style="@style/burglar_content_style"/>

    <TextView
        android:drawablePadding="5dp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程删除数据：#*wipedata*#"
        style="@style/burglar_content_style"/>

    <TextView
        android:drawablePadding="5dp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程锁屏：#*lockscreen*#"
        style="@style/burglar_content_style"/>

</LinearLayout>